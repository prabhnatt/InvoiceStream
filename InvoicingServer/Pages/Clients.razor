@page "/clients"
@attribute [Authorize]
@inject ApiClient ApiClient
@using System.Net.Http.Json;
@using InvoicingServer.Models
@using InvoicingServer.Services

<h3>Clients</h3>

@if (_isLoading)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in _clients)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.Email</td>
                    <td>@c.Notes</td>
                </tr>
            }
        </tbody>
    </table>
}

<h4>Add Client</h4>

<div class="mb-3">
    <label class="form-label">Name</label>
    <input class="form-control" @bind="_newClient.Name" />
</div>

<div class="mb-3">
    <label class="form-label">Email</label>
    <input class="form-control" @bind="_newClient.Email" />
</div>

<button class="btn btn-primary" @onclick="CreateClientAsync" disabled="@_isSaving">
    @(_isSaving ? "Saving..." : "Save")
</button>

@code {
    private List<ClientResponse> _clients = new();
    private ClientCreateRequest _newClient = new();
    private bool _isLoading = true;
    private bool _isSaving;

    protected override async Task OnInitializedAsync()
    {
        await LoadClientsAsync();
    }

    private async Task LoadClientsAsync()
    {       
        _isLoading = true;

        var response = await ApiClient.GetAsync("/api/clients");
        response.EnsureSuccessStatusCode();

        var list = await response.Content.ReadFromJsonAsync<List<ClientResponse>>();
        _clients = list ?? new();

        _isLoading = false;
    }

    private async Task CreateClientAsync()
    {
        if (string.IsNullOrWhiteSpace(_newClient.Name))
            return;

        _isSaving = true;

        try
        {
            var response = await ApiClient.PostAsJsonAsync("/api/clients", _newClient);
            response.EnsureSuccessStatusCode();

            var created = await response.Content.ReadFromJsonAsync<ClientResponse>();
            if (created is not null)
            {
                _clients.Add(created);
                _newClient = new ClientCreateRequest();
            }
        }
        finally
        {
            _isSaving = false;
        }
    }
}
